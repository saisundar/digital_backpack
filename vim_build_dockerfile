FROM docker-dev.yelpcorp.com/trusty_yelp:latest
MAINTAINER distsys-data@yelp.com

ENV DEBIAN_FRONTEND noninteractive

RUN     apt-get update && apt-get -y install \
            build-essential \ 
            cmake \
            dpkg-dev \
            mercurial \
            ncurses-dev \
            python-tox \
            python-setuptools \
            python-dev \
            python3-dev \
            debhelper \
            libyaml-0-2 \
            dh-virtualenv 

RUN     mkdir /work
